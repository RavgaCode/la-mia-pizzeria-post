<h1>Ecco l'elenco delle nostre pizze</h1>

@model List<Pizza>
@if(Model.Count() == 0){
    <h3 class="text-center">Menù non ancora disponibile</h3>
}else{
<div>
        <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Pizza pizza in Model){
                <tr>
                    <th scope="row"><a>@pizza.Id</a></th>
                    <td>@pizza.Name</td>
                    <td><img src="@pizza.Image" alt="@pizza.Name"/></td>
                        <td><a href="@Url.Action("Details",new {id = pizza.Id})" role="button" class="btn btn-primary">Vedi dettagli</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
}